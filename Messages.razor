@page "/messages"
@inherits LayoutComponentBase

<h3>Messages</h3>
<button class="btn btn-primary" @onclick="ComposeMessage">Compose Message</button>
<table class="table">
    <thead>
        <tr>
            <th>Sender</th>
            <th>Content</th>
            <th>Date Sent</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in messages)
        {
            <tr>
                <td>@message.Sender</td>
                <td>@message.Content</td>
                <td>@message.DateSent</td>
                <td>
                    <button class="btn btn-secondary" @onclick="() => ViewMessage(message.Id)">View</button>
                    <button class="btn btn-danger" @onclick="() => DeleteMessage(message.Id)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

